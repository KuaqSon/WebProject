<% include layouts/header %>

    <div class="panel-block">
        <div class="row mt-5">
            <div class="col-xs-12 col-md-5 mt-5">
                <img class="spi" src="/productImages/<%= p.id%>/<%= p.image %>" alt="">
                <br>
            </div>
            <div class="col-xs-12 col-md-6 mt-5 ml-5">
                <h1 class="page-header">
                    <%= p.title%>
                </h1>
                <p>
                    <%= p.desc %>
                </p>
                <p>
                    <h5><%= parseFloat(p.price).toFixed(2) %> VND </h5>
                </p>
                    <% if(loggedIn) { %>
                        <p>
                            <form action="/cart/add/<%= p.slug %>">
                                <input class="btn btn-sm lip-btt type="submit" value="Thêm vào giỏ hàng">
                            </form>
                            <!-- <a href="/cart/add/<%= p.slug %>">Thêm vào giỏ hàng</a> -->
                        </p>
    
                        <% } else {%>
                            <p>
                                Để mua sản phẩm xin đăng nhập.
                            </p>
                        <% } %>
    
                
            </div>
    
            <div class="col-xs-12 mt-5">
                <ul class="gallery">
                    <% galleryImages.forEach(function (image) { %>
    
                        <% if(image !="thumbs") { %>
                            <li>
                                <a data-fancybox="gallery" href="/productImages/<%= p.id %>/gallery/<%= image%>">
                                    <img class="pimage" src="/productImages/<%= p.id %>/gallery/<%= image%>" alt="">
                                </a>
                            </li>
                            <% } %>
    
                                <% }); %>
    
                </ul>
            </div>
        </div>
    </div>
    <% include layouts/footer2 %>