<% include layouts/header %>

<div class="panel-block">
    <div class="row mt-5">
        <div class="col-xs-12 col-md-5 mt-5">
            <img class="spi" src="/productImages/<%= p.id%>/<%= p.image %>" alt="">
            <br>
        </div>
        <div class="col-xs-12 col-md-6 mt-5 ml-5">
            <h1 class="page-header">
                <%= p.title%>
            </h1>
            <p>
                <%= p.desc %>
            </p>
            <p>
                <h5>
                    <%= parseFloat(p.price).toFixed(2) %> VND </h5>
            </p>
            <% if(loggedIn) { %>
            <p>
                <form action="/cart/add/<%= p.slug %>">
                    <input class="btn btn-sm lip-btt" type="submit" value="Thêm vào giỏ hàng">
                </form>
                <!-- <a href="/cart/add/<%= p.slug %>">Thêm vào giỏ hàng</a> -->
            </p>

            <% } else {%>
            <p>
                Để mua sản phẩm xin đăng nhập.
            </p>
            <% } %>
        </div>

        <div class="col-xs-12 mt-5">
            <ul class="gallery">
                <% galleryImages.forEach(function (image) { %>

                <% if(image !="thumbs") { %>
                <li>
                    <a data-fancybox="gallery" href="/productImages/<%= p.id %>/gallery/<%= image%>">
                        <img class="pimage" src="/productImages/<%= p.id %>/gallery/<%= image%>" alt="">
                    </a>
                </li>
                <% } %>
                <% }); %>
            </ul>
        </div>
    </div>
</div>


<div class="panel-block mt-4 pb-4">
    <div class="shop-header">
        <h1>Comments </h1>
    </div>
    <div class="row p-3">
        <div class="col-md-5">
            <form method="post" action="/products/<%= p.category %>/<%= p.slug %>" class="form-control">
                <input type="hidden" name="slug" value="<%= p.slug %>" />
                <input type="text" class="form-control mt-2" name="name" placeholder="Tên bạn ... ">
                <textarea type="text" class="form-control mt-3" name="content" placeholder="Nhập nhận xét ... " rows="3"></textarea>
                <input class="btn lip-btt mt-3 mb-1" type="submit">
            </form>
        </div>
        <div class="col-md-7">
            <div class="ml-3">
                <% comments.forEach(function(cmt) {%>
                <div class="media-body form-control mb-3">
                    <h4 class="media-heading user_name">
                        <%= cmt.name %>
                    </h4>
                    <%= cmt.content%>
                </div>
                <% }); %>
            </div>
        </div>
    </div>

</div>
<% include layouts/footer2 %>